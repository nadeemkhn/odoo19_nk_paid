<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record id="ir_cron_leopards_process_cancellations" model="ir.cron">
            <field name="name">Leopards: Process queued cancellations</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">model._cron_process_leopards_cancellations()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>

        <record id="ir_cron_leopards_refresh_tracking" model="ir.cron">
            <field name="name">Leopards: Auto-refresh tracking status</field>
            <field name="model_id" ref="stock.model_stock_picking"/>
            <field name="state">code</field>
            <field name="code">model._cron_refresh_leopards_tracking()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
