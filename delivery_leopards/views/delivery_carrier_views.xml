<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_delivery_carrier_form_leopards" model="ir.ui.view">
        <field name="name">delivery.carrier.form.leopards</field>
        <field name="model">delivery.carrier</field>
        <field name="inherit_id" ref="delivery.view_delivery_carrier_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='delivery_type']" position="after">
                <notebook>
                    <page string="Leopards Courier Configuration" name="leopards_config" invisible="delivery_type != 'leopards'">
                        <group>
                            <group string="API Credentials">
                                <field name="leopards_api_key" password="True"/>
                                <field name="leopards_api_secret" password="True"/>
                                <field name="leopards_account_id"/>
                                <field name="leopards_shipper_id" options="{'no_create': False}"/>
                                <button name="action_leopards_test_connection" string="Test Connection" type="object" class="btn-primary"/>
                            </group>
                            <group string="API Settings">
                                <field name="leopards_api_url"/>
                            </group>
                        </group>
                    </page>
                </notebook>
            </xpath>
        </field>
    </record>
</odoo>
