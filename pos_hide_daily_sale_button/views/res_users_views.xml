<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_users_form_hide_daily_sale" model="ir.ui.view">
        <field name="name">res.users.form.hide.daily.sale</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Add field to Preferences tab -->
            <xpath expr="//notebook" position="inside">
                <page string="POS Settings" name="pos_settings">
                    <group>
                        <field name="hide_daily_sale_button" 
                               widget="boolean_toggle"
                               string="Hide Daily Sale Button"
                               help="If enabled, the Daily Sale button will be hidden in POS closing popup for this user."/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
