<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
        <t t-name="pos_hide_daily_sales_access.ClosePosPopup" t-inherit="point_of_sale.ClosePosPopup" t-inherit-mode="extension">
            <!-- Locate the Daily Sale button -->
            <xpath expr="//button[@t-on-click='downloadSalesReport']" position="attributes">
                <!-- Add t-if condition to control visibility -->
                <attribute name="t-if">pos.config.show_daily_sales_button</attribute>
            </xpath>
        </t>
</templates>
