<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_report_pos_order_search_inherit_salesperson" model="ir.ui.view">
        <field name="name">report.pos.order.search.inherit.salesperson</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_report_pos_order_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_categ_id']" position="after">
                <field name="salesperson_name"/>
            </xpath>
            <xpath expr="//filter[@name='User']" position="after">
                <filter string="Salesperson" name="salesperson" context="{'group_by':'salesperson_name'}"/>
            </xpath>
        </field>
    </record>

    <record id="report_pos_order_view_tree_inherit_salesperson" model="ir.ui.view">
        <field name="name">report.pos.order.view.list.inherit.salesperson</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.report_pos_order_view_tree"/>
        <field name="arch" type="xml">
            <field name="product_categ_id" position="after">
                <field name="salesperson_name" optional="show"/>
            </field>
        </field>
    </record>

    <record id="view_report_pos_order_pivot_inherit_salesperson" model="ir.ui.view">
        <field name="name">report.pos.order.pivot.inherit.salesperson</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_report_pos_order_pivot"/>
        <field name="arch" type="xml">
            <field name="product_categ_id" position="after">
                <field name="salesperson_name" type="row"/>
            </field>
        </field>
    </record>

    <record id="view_report_pos_order_graph_inherit_salesperson" model="ir.ui.view">
        <field name="name">report.pos.order.graph.inherit.salesperson</field>
        <field name="model">report.pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_report_pos_order_graph"/>
        <field name="arch" type="xml">
            <field name="product_categ_id" position="replace">
                <field name="salesperson_name"/>
            </field>
            <field name="price_total" position="before">
                <field name="salesperson_name" type="measure"/>
            </field>
        </field>
    </record>
</odoo>
